<h3>{{'title_leave_comment'|trans({}, 'SonataNewsBundle') }}:</h3>

<form action="{{ url('sonata_news_add_comment', {'id': post_id}) }}" method="POST" >
    {#<div class="clearfix">#}
        {#{{ 'leave_comment_name'|trans({}, 'SonataNewsBundle') }}#}
        {{ form_widget(form.name, { 'attr' : { 'value' : app.user.username, 'style' : 'display:none' } } ) }}
        {#{{ form_errors(form.name) }}#}
    {#</div>#}

    {#<div class="clearfix">#}
        {#{{ 'leave_comment_email'|trans({}, 'SonataNewsBundle') }}#}
        {#{{ form_widget(form.email) }}#}
        {#{{ form_errors(form.ema il) }}#}
    {#</div>#}

    {#<div class="clearfix">#}
        {#{{ form_label(form.url) }}#}
        {#{{ form_widget(form.url) }}#}
        {#{{ form_errors(form.url) }}#}
    {#</div>#}

    <div class="clearfix sonata-blog-comment-tarea">
        {#{{ form_label(form.message) }}#}
        {{ form_widget(form.message, { 'attr' : { 'placeholder' : 'Введите сообщение' } }) }}
        {{ form_errors(form.message) }}
    </div>

    {{ form_rest(form) }}

    <input type="submit" class="button_buy-trn" value="{{'btn_add_comment'|trans({}, 'SonataNewsBundle') }}" />
</form>