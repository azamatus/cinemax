<h1>Новый заказ</h1>
Ф.И.О : {{ binclient.fio }}<br/>
Телефон: {{ binclient.phone }}<br/>
Email: {{ binclient.email }}<br/>
Адрес: {{ binclient.address }}<br/>
<table>
    <tr>
        <th>Товар:</th>
        <th>Цена:</th>
        <th>Кол-во:</th>
        <th>Итого:</th>
    </tr>
    {% set totalPrice = 0%}
    {% for order in orders %}
        {% set good = order.disc %}
        {% set totalPrice = totalPrice + good.price * order.amount %}
        <tr id="{{ good.id }}">
            <td>
                <div>
                    <a class="name" href="{{ url('cinemax_disc_info', {'id': good.id} ) }}">{{ good.name }}</a>

                    <div class="from">{{ good.description }}</div>
                </div>
            </td>
            <td>
                <div class="Dollar">{{ good.price }}</div>
            </td>
            <td>
                <div class="bin_itemCount">{{ order.amount }}</div>
            </td>
            <td>
                <div class="bin_itemPrice" id="goodTotal_{{ good.id }}">
                    <div class="Dollar">{{ (good.price * order.amount) }}</div>
                </div>
            </td>
        </tr>
    {% endfor %}
    <tr class="stop-count">
        <td>
            <div class="itog">Итого:</div>
        </td>
        <td></td>
        <td></td>
        <td>
            <div class="bin_itemTotalPrice">
                <div class="Som">{{ totalPrice }}</div>
            </div>
        </td>
    </tr>
</table>